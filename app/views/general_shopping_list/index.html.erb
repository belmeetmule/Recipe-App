<section class = "page">
    <h1>General Shopping List</h1>
    <div class= "flex-row">
        <p>Amount of food items to buy: <%= @missing_ingredients.count %></p>
        <p>Total value of food needed: <%= @total_price %></p>
    </div>
    <table>
        <thead>
        <tr>
            <th>
            Food
            </th>
            <th>
            Quantity
            </th>
            <th>
            Price
            </th>
        </tr>
        </thead>
        <tbody>
        <%@missing_ingredients.each do |ingredient| %>
            <tr class="bg-white">
                <td class="">
                    <%= ingredient[:name] %>
                </td>
                <td class="">
                    <%= ingredient[:quantity] %> <%= ingredient[:unit] %>
                </td>
                <td class="">
                    <%= ingredient[:price] %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>

</section>