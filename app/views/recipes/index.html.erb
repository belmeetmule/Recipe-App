<section class="container flex food-placeholder">
<h1> Recipes</h1>
<div class="food flex">
<%= button_to "Create new recipe", 
            new_user_recipe_path,
            method: :get %>

<% if @recipes.any? %>


        <% @recipes.each do |recipe| %>
    <div class='recipe flex'>
          <div class="recipe-details flex">

                     <%= link_to recipe.name, 
                     user_recipe_path(current_user, recipe),
                        method: :get %> 

                        <%= button_to "remove", 
                            user_recipe_path(current_user, recipe),
                            method: :delete %>                 
           </div> 
           <p><%= recipe.description %></p>
        <% end %>
    </div>    
<% else %>
    <p> There are no recipes yet. </p>   
<% end %>
</div>
</section>
